<%- include('partials/header') %>

<div class="hero">
    <h1>Welcome to NodeTalk</h1>
    <p>The social network for developers who read documentation.</p>

    <% if (!locals.currentUser) { %>
        <div class="actions">
            <a href="/auth/login" class="btn">Login</a>
            <a href="/auth/signup" class="btn btn-outline">Join the Discussion</a>
        </div>
        <div class="actions">
            <a href="/auth/guest" class="btn btn-outline">Continue as Guest</a>
            <a href="/auth/github" class="btn btn-outline">Continue with GitHub</a>
        </div>
    <% } else { %>
        <div class="actions">
            <a href="/posts" class="btn">Go to Feed</a>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
