<%- include('../partials/header') %>

<div class="feed-container">
    <% if (!post) { %>
        <div class="empty-state">
            <p>Post not found.</p>
            <a href="/posts" class="btn">Back to Feed</a>
        </div>
    <% } else { %>
        <%- include('../partials/post-card', { post: post }) %>

        <section class="add-comment">
            <form action="/posts/<%= post.id %>/comments" method="POST">
                <textarea name="content" rows="2" placeholder="Write a comment..." required></textarea>
                <div style="text-align: right; margin-top: 0.5rem;">
                    <button type="submit" class="btn-sm btn-primary">Reply</button>
                </div>
            </form>
        </section>

        <section class="comments">
            <h3>Comments</h3>
            <% if (!comments || comments.length === 0) { %>
                <p>No comments yet.</p>
            <% } else { %>
                <ul class="comment-list">
                    <% comments.forEach(comment => { %>
                        <% const commentUser = comment.user || {}; %>
                        <li class="comment">
                            <div class="comment-header">
                                <span class="username">@<%= commentUser.username || 'unknown' %></span>
                                <span class="date"><%= new Date(comment.createdAt).toLocaleDateString() %></span>
                            </div>
                            <p><%= comment.content %></p>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
        </section>
    <% } %>
</div>

<%- include('../partials/footer') %>
